@model BikeAdUpdateModel
@{
    ViewData["Title"] = "Update Bike Ad";
}

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Bikes" asp-action="Update">
            <h4>Update bike ad</h4>
            <hr />
            <partial name="_BikeInputPartial" />
            <button type="submit" class="btn btn-default">Update bike ad</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}